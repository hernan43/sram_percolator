<p id="notice"><%= notice %></p>

<h1>Save Files</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Game</th>
      <th>SRAM File</th>
      <th><%= t(:checksum) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @save_files.each do |save_file| %>
      <tr>
        <td><%= save_file.name %></td>
        <td><%= link_to save_file.game.name, save_file.game %></td>
        <td><%= link_to save_file.sram.filename, url_for(save_file.sram) if not save_file.sram.attachment.nil? %></td>
        <td><%= save_file.sram.checksum  if not save_file.sram.attachment.nil? %></td>
        <td><%= link_to 'Show', save_file %></td>
        <td><%= link_to 'Edit', edit_save_file_path(save_file) %></td>
        <td><%= link_to 'Destroy', save_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

