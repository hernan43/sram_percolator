<!DOCTYPE html>
<html>
  <head>
    <title><%= t(:sram_percolator) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <%= link_to t(:sram_percolator), root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMain">
          <ul class="navbar-nav mr-auto">

            <% if not user_signed_in? %>
            <li class="nav-item active">
              <%= link_to t(:signup_login), new_user_session_path, class: 'nav-link' %>
            </li>
            <% else %>
            <li class="nav-item active">
              <%= link_to fa_icon('gamepad', text: t(:games)), games_path, class: 'nav-link' %>
            </li>
            <li class="nav-item active">
              <%= link_to fa_icon('id-card', text: t(:profile)), user_profile_path, class: 'nav-link' %>
            </li>
            <li class="nav-item active">
              <%= link_to fa_icon('sign-out', text: t(:logout)), destroy_user_session_path, class: 'nav-link' %>
            </li>
            <% end %>

          </ul>
        </div>
    </nav>

    <main role="main" class="col-12 col-md-9 container">
      <div id="content">
        <%= yield %>
      </div>
    </main>

  </body>
</html>
