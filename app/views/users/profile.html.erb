<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h1>
        <%= current_user.fullname %>

        <% if current_user.has_name? %>
            <small class="text-muted"><%= current_user.email %></small>
        <% end %>
        </h1>
    
        <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center"><%= link_to t(:edit_user_account), edit_user_profile_path %></li>
        <li class="list-group-item d-flex justify-content-between align-items-center"><%= link_to t(:change_password), edit_user_registration_path %></li>
        </ul>
    </div>
</div>