<h1><%= t(:editing_profile, name: current_user.fullname) %></h1>

<%= simple_form_for current_user, url: update_user_profile_path, method: :patch do |f| %>
    <%= f.input :first_name, value: current_user.first_name %>
    <%= f.input :last_name, value: current_user.last_name %>
    <%= f.input :email, value: current_user.email %>
    <%= f.button :submit, t(:save_changes) %>
<% end %>